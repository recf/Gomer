{
  "type": "object",
  "properties": {
    "version": {
      "required": true,
      "type": [
        "string",
        "null"
      ]
    },
    "games": {
      "required": true,
      "type": "array",
      "items": {
        "type": [
          "object",
          "null"
        ],
        "properties": {
          "name": {
            "required": true,
            "type": "string"
          },
          "alias": {
            "type": [
              "string",
              "null"
            ]
          },
          "platform": {
            "required": true,
            "type": "string"
          },
          "added_date": {
            "required": true,
            "type": "string"
          },
          "finished_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "priority": {
            "type": "integer",
            "default": 2
          },
          "hours": {
            "type": "integer",
            "default": 10
          },
          "playing": {
            "type": "boolean",
            "default": false
          },
          "genres": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      }
    }
  }
}