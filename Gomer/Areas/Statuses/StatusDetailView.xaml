<UserControl x:Class="Gomer.Areas.Statuses.StatusDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:statuses="clr-namespace:Gomer.Areas.Statuses"
             mc:Ignorable="d" 
             
             d:DataContext="{d:DesignInstance Type=statuses:StatusDetailViewModel}"
             d:DesignHeight="300" 
             d:DesignWidth="300">
    <StackPanel>

        <Label Content="Name"/>
        <TextBox Text="{Binding Model.Name, Mode=OneWay}" IsEnabled="False"/>

        <Label Content="Order"/>
        <TextBox Text="{Binding Model.Order, Mode=OneWay}" IsEnabled="False"/>

        <CheckBox IsChecked="{Binding Model.AlwaysIncludeInStats}" 
                  Content="Always include in stats (overrides list setting)?"/>

        <StackPanel Margin="5">
            <Button Content="Ok" Command="{Binding UpdateCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
